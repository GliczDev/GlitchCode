<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GlitchCode"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="GlitchCode.MainWindow"
        mc:Ignorable="d"
        Title="GlitchCode" 
        Height="450" 
        MaxHeight="{x:Static SystemParameters.MaximizedPrimaryScreenHeight}"
        MinHeight="450"
        Width="800" 
        MinWidth="800"
        Icon="Images/GlitchCode.png" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Resources>
        <ControlTemplate x:Key="ContextMenu" TargetType="{x:Type ContextMenu}">
            <Border CornerRadius="5" BorderBrush="#FF2C2F33" BorderThickness="1" Background="#FF2C2F33" SnapsToDevicePixels="True">
                <ItemsPresenter/>
            </Border>
        </ControlTemplate>
        <ControlTemplate x:Key="MenuItem" TargetType="{x:Type MenuItem}">
            <Border x:Name="Border"  BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                <Grid>
                    <ContentPresenter Content="{TemplateBinding Header}" Margin="{TemplateBinding Padding}" IsManipulationEnabled="False" ForceCursor="False" RecognizesAccessKey="False" OverridesDefaultStyle="False"/>
                    <Popup AllowsTransparency="True" IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}" PopupAnimation="{DynamicResource {x:Static SystemParameters.MenuPopupAnimationKey}}">
                        <Border CornerRadius="5" BorderBrush="#FF2C2F33" BorderThickness="1" Background="#FF2C2F33" SnapsToDevicePixels="True" OverridesDefaultStyle="False">
                            <ItemsPresenter/>
                        </Border>
                    </Popup>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" TargetName="Border" Value="#2a4a5b"/>
                    <Setter Property="BorderBrush" TargetName="Border" Value="#26a0da"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <Style x:Key="Buttons" TargetType="{x:Type Ellipse}">
            <Setter Property="Opacity" Value="0.25" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                  To="1" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                  To="0.25" Duration="0:0:0.2" />
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.New" Executed="shortCutNewButton_Click"/>
        <CommandBinding Command="ApplicationCommands.Open" Executed="shortCutOpenButton_Click"/>
        <CommandBinding Command="ApplicationCommands.Save" Executed="shortCutSaveButton_Click"/>
        <!--
        <CommandBinding Command="ApplicationCommands.PublishCode" Executed="shortCutPublishCodeButton_Click"/>
        -->
        <CommandBinding Command="ApplicationCommands.Close" Executed="shortCutCloseButton_Click"/>
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Modifiers="Ctrl" Key="N" Command="ApplicationCommands.New"/>
        <KeyBinding Modifiers="Ctrl" Key="O" Command="ApplicationCommands.Open"/>
        <KeyBinding Modifiers="Ctrl" Key="S" Command="ApplicationCommands.Save"/>
        <!--
        <KeyBinding Modifiers="Ctrl" Key="P" Command="ApplicationCommands.Save"/>
        -->
        <KeyBinding Modifiers="Ctrl" Key="W" Command="ApplicationCommands.Close"/>
    </Window.InputBindings>
    <Border Background="#2C2F33" CornerRadius="10">
        <Grid>
            <Image 
                Source="Images/GlitchCode.png"
                VerticalAlignment="Top"
                HorizontalAlignment="Left" 
                RenderTransformOrigin="28.887,-0.097" 
                Height="26" 
                Margin="10,10,0,40" 
                Width="23" Grid.RowSpan="2"/>
            <Menu Background="Transparent" Foreground="White" IsMainMenu="True" Margin="33,10,687,417" FontFamily="/GlitchCode;component/Fonts/#Open Sans" MinHeight="23">
                <MenuItem Foreground="White" Header="File" Template="{StaticResource MenuItem}">
                    <MenuItem Foreground="White" Header="New" Background="#2C2F33" BorderBrush="#2C2F33" BorderThickness="2" Click="newButton_Click" InputGestureText="Ctrl+N"/>
                    <MenuItem Foreground="White" Header="Open" Background="#2C2F33" BorderBrush="#2C2F33" BorderThickness="2" Click="openButton_Click" InputGestureText="Ctrl+O"/>
                    <MenuItem Foreground="White" Header="Save" Background="#2C2F33" BorderBrush="#2C2F33" BorderThickness="2" Click="saveButton_Click" InputGestureText="Ctrl+S"/>
                    <Separator/>
                    <MenuItem Foreground="White" Header="Publish Code" Background="#2C2F33" BorderBrush="#2C2F33" BorderThickness="2" Click="publishCodeButton_Click"/>
                    <Separator/>
                    <MenuItem Foreground="White" Header="Close" Background="#2C2F33" BorderBrush="#2C2F33" BorderThickness="2" Click="closeButton_Click" InputGestureText="Ctrl+W"/>
                    <MenuItem Foreground="White" Header="Exit" Background="#2C2F33" BorderBrush="#2C2F33" BorderThickness="2" Click="exitButton_Click" InputGestureText="Alt+F4"/>
                </MenuItem>
                <MenuItem Foreground="White" Header="Edit" Template="{StaticResource MenuItem}">
                    <MenuItem Foreground="White" Header="Undo" Background="#FF2C2F33" BorderBrush="#FF2C2F33" Click="undoButton_Click" InputGestureText="Ctrl+Z"/>
                    <MenuItem Foreground="White" Header="Redo" Background="#FF2C2F33" BorderBrush="#FF2C2F33" Click="redoButton_Click" InputGestureText="Ctrl+Y"/>
                    <Separator/>
                    <MenuItem Foreground="White" Header="Cut" Background="#FF2C2F33" BorderBrush="#FF2C2F33" Click="cutButton_Click" InputGestureText="Ctrl+X"/>
                    <MenuItem Foreground="White" Header="Copy" Background="#FF2C2F33" BorderBrush="#FF2C2F33" Click="copyButton_Click" InputGestureText="Ctrl+C"/>
                    <MenuItem Foreground="White" Header="Paste" Background="#FF2C2F33" BorderBrush="#FF2C2F33" Click="pasteButton_Click" InputGestureText="Ctrl+V"/>
                    <Separator/>
                    <MenuItem Header="Select all" Background="#FF2C2F33" BorderBrush="#FF2C2F33" Click="selectAllButton_Click" InputGestureText="Ctrl+A"/>
                </MenuItem>
            </Menu>
            <Ellipse Style="{StaticResource Buttons}" Margin="0,10,12,0" x:Name="closeButton" Grid.Row="0" Fill="#eb2121" HorizontalAlignment="Right" VerticalAlignment="Top" Height="16" RenderTransformOrigin="0.5,0.5" Width="16" Cursor="Hand" MouseLeftButtonDown="closeButton_Click">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
            </Ellipse>
            <Ellipse Style="{StaticResource Buttons}" Margin="0,10,32,0" x:Name="maximazeButton" Grid.Row="0" Fill="#ebb728" HorizontalAlignment="Right" VerticalAlignment="Top" Height="16" RenderTransformOrigin="0.5,0.5" Width="16" MouseLeftButtonDown="maximazeButton_Click" Cursor="Hand">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
            </Ellipse>
            <Ellipse Style="{StaticResource Buttons}" Margin="0,10,52,0" x:Name="minimizeButton" Grid.Row="0" Fill="#3ce65b" HorizontalAlignment="Right" VerticalAlignment="Top" Height="16" RenderTransformOrigin="0.5,0.5" Width="16" MouseLeftButtonDown="minimizeButton_Click" Cursor="Hand">
                <Ellipse.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Ellipse.RenderTransform>
            </Ellipse>
            <avalonedit:TextEditor IsEnabled="True" Foreground="White" Background="#23272A" x:Name="AvalonEdit" MinHeight="399" Margin="10,37,10,10" MinWidth="780" FontFamily="/GlitchCode;component/Fonts/#Open Sans" FontSize="16" VerticalScrollBarVisibility="Auto" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" ShowLineNumbers="True" WordWrap="True" BorderBrush="#FF2C2F33" Padding="0">
                <avalonedit:TextEditor.ContextMenu>
                    <ContextMenu Template="{StaticResource ContextMenu}" BorderBrush="#FF2C2F33" Foreground="White" HasDropShadow="False" FontFamily="/GlitchCode;component/Fonts/#Open Sans" OpacityMask="#FF2C2F33">
                        <MenuItem Header="Undo" Background="#FF2C2F33" BorderBrush="#FF2C2F33" Click="undoButton_Click" InputGestureText="Ctrl+Z"/>
                        <MenuItem Header="Redo" Background="#FF2C2F33" BorderBrush="#FF2C2F33" Click="redoButton_Click" InputGestureText="Ctrl+Y"/>
                        <Separator/>
                        <MenuItem Header="Cut" Background="#FF2C2F33" BorderBrush="#FF2C2F33" Click="cutButton_Click" InputGestureText="Ctrl+X"/>
                        <MenuItem Header="Copy" Background="#FF2C2F33" BorderBrush="#FF2C2F33" Click="copyButton_Click" InputGestureText="Ctrl+C"/>
                        <MenuItem Header="Paste" Background="#FF2C2F33" BorderBrush="#FF2C2F33" Click="pasteButton_Click" InputGestureText="Ctrl+V"/>
                        <Separator/>
                        <MenuItem Header="Select all" Background="#FF2C2F33" BorderBrush="#FF2C2F33" Click="selectAllButton_Click" InputGestureText="Ctrl+A"/>
                    </ContextMenu>
                </avalonedit:TextEditor.ContextMenu>
            </avalonedit:TextEditor>
            <TextBlock FontFamily="/GlitchCode;component/Fonts/#Open Sans" FontSize="16" UseLayoutRounding="False" Margin="359,10,359,418" Text="GlitchCode" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Top"></TextBlock>
        </Grid>
    </Border>
</Window>
