<Application x:Class="GlitchCode.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GlitchCode"
             StartupUri="MainWindow.xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes\VSCode.xaml"/>
                <ResourceDictionary Source="Styles\LeftBarStyle.xaml"/>
                <ResourceDictionary Source="Styles\TextEditor.xaml"/>
                <ResourceDictionary Source="Languages\English.xaml"/>
                <hc:ThemeResources RequestedTheme="Dark"/>
                <hc:Theme/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
